  <script>
    // Small interactive bits
    function surprise(){
      const txt = document.getElementById('messageText');
      txt.innerHTML = 'Â¡Sorpresa! ðŸŽ‰ Te mando mil besos y un abrazo gigante. Te adoro, mi reina. <span class="heart">ðŸ’–</span>';
      // tiny confetti effect (simple DOM dots)
      for(let i=0;i<22;i++){
        const d = document.createElement('div');
        d.style.position='fixed';
        d.style.left=(50 + (Math.random()*40-20))+'%';
        d.style.top=(40 + (Math.random()*20-10))+'%';
        d.style.width='10px';
        d.style.height='10px';
        d.style.borderRadius='50%';
        d.style.zIndex=9999;
        d.style.pointerEvents='none';
        const colors=['#ffd34d','#ffecb3','#ffb86b','#ffdd85','#fff7c8'];
        d.style.background=colors[Math.floor(Math.random()*colors.length)];
        d.style.opacity=0.95;
        d.style.transform='translateY(0) scale(0.9)';
        d.style.transition='transform 1s ease-out, opacity 1s ease-out';
        document.body.appendChild(d);
        setTimeout(()=>{ d.style.transform='translateY(140px) scale(1.4)'; d.style.opacity=0; }, 50 + i*30);
        setTimeout(()=>{ d.remove(); }, 1200 + i*20);
      }
    }

    function changeMsg(){
      const userMsg = prompt("Escribe tu mensaje pa' ella (mÃ¡x 300 chars):", "Eres mi sol amarillo ðŸŒ¼");
      if(userMsg === null) return;
      const sanitized = String(userMsg).slice(0,300).replace(/</g,'&lt;').replace(/>/g,'&gt;');
      document.getElementById('messageText').innerHTML = sanitized + ' <span class="heart">ðŸ’–</span>';
    }

    // gentle pulse for flowers based on reduced motion preference
    if(window.matchMedia("(prefers-reduced-motion: reduce)").matches){
      document.querySelectorAll('.flower').forEach(f=> f.style.animation='none');
      document.querySelectorAll('.heart').forEach(h=> h.style.animation='none');
    }
  </script>
